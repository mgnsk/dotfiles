#!/usr/bin/env bash

set -euo pipefail

repo="$(gh repo view --json nameWithOwner --template '{{.nameWithOwner}}')"

export GH_REPO="$repo"
export FZF_DEFAULT_COMMAND="gh-search issues {q}"

fzf --bind "change:reload:sleep 0.1; $FZF_DEFAULT_COMMAND || true" --ansi --phony --query '' \
	--preview "gh-issue-view {1} | rg --colors=match:bg:yellow --color=always --passthru {q}" \
	--preview-window=wrap \
	--prompt "Issues> "
