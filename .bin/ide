#!/bin/env bash

set -euo pipefail

PS3='Please enter your choice: '
options=("default" "base" "go" "lua" "rust" "php" "python" "webdev" "Quit")
select opt in "${options[@]}"; do
	case $opt in
	"default")
		break
		;;
	"base")
		break
		;;
	"go")
		break
		;;
	"lua")
		break
		;;
	"rust")
		break
		;;
	"php")
		break
		;;
	"python")
		break
		;;
	"webdev")
		break
		;;
	"Quit")
		break
		;;
	*)
		echo "invalid option $REPLY"
		exit 1
		;;
	esac
done

nix develop "${HOME}?submodules=1#${opt}"
