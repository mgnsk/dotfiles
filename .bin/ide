#!/bin/env bash

set -euo pipefail

PS3='Please enter your choice: '
options=("base" "dev" "audio" "Quit")
select opt in "${options[@]}"; do
	case $opt in
	"base")
		break
		;;
	"dev")
		break
		;;
	"audio")
		break
		;;
	"Quit")
		break
		;;
	*)
		echo "invalid option $REPLY"
		exit 1
		;;
	esac
done

nix develop "${HOME}?submodules=1#${opt}" --show-trace
