set $mod Mod4

# start a terminal
bindsym $mod+Return exec alacritty

# kill focused window
bindsym $mod+q kill

bindsym $mod+d exec j4-dmenu-desktop --no-generic --display-binary --dmenu='wmenu -i -f "Monospace 11"' --term='alacritty'

# change focus
bindsym {
    $mod+h focus left
    $mod+j focus down
    $mod+k focus up
    $mod+l focus right
}

# move focused window
bindsym {
    $mod+Shift+h move left
    $mod+Shift+j move down
    $mod+Shift+k move up
    $mod+Shift+l move right
}

# split in horizontal orientation
bindsym $mod+s split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)

#bindsym $mod+w layout tabbed
#bindsym $mod+e layout toggle split

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
floating_modifier $mod normal

# toggle tiling / floating and make floating windows sticky by default
bindsym $mod+Shift+space floating toggle, sticky toggle

for_window [title="^(Picture in picture)|(Picture-in-Picture)$"] floating enable, sticky enable, border none, move position 1000 0

for_window [app_id="zenity"] floating enable
for_window [app_id="xdg-desktop-portal-.*"] floating enable
for_window [title="KeePassXC - (.*)Access Request"] floating enable
for_window [title="Unlock Database - KeePassXC"] floating enable
for_window [app_id="eu.web-eid.web-eid"] floating enable
for_window [app_id="thunar" title="^Rename"] floating enable
for_window [app_id="org.kde.keditfiletype"] floating enable

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

bindsym $mod+Control+h workspace prev
bindsym $mod+Control+l workspace next
bindsym $mod+tab workspace back_and_forth
bindsym Alt+tab workspace back_and_forth
bindsym $mod+Shift+tab workspace prev_on_output
bindsym Alt+Shift+tab workspace prev_on_output

# switch to workspace
bindsym {
    $mod+1 workspace 1
    $mod+2 workspace 2
    $mod+3 workspace 3
    $mod+4 workspace 4
    $mod+5 workspace 5
    $mod+6 workspace 6
    $mod+7 workspace 7
    $mod+8 workspace 8
    $mod+9 workspace 9
    $mod+0 workspace 10

    $mod+Control+1 workspace 11
    $mod+Control+2 workspace 12
    $mod+Control+3 workspace 13
    $mod+Control+4 workspace 14
    $mod+Control+5 workspace 15
    $mod+Control+6 workspace 16
    $mod+Control+7 workspace 17
    $mod+Control+8 workspace 18
    $mod+Control+9 workspace 19
    $mod+Control+0 workspace 20
}

# move focused container to workspace
bindsym {
    $mod+Shift+1 move container to workspace 1
    $mod+Shift+2 move container to workspace 2
    $mod+Shift+3 move container to workspace 3
    $mod+Shift+4 move container to workspace 4
    $mod+Shift+5 move container to workspace 5
    $mod+Shift+6 move container to workspace 6
    $mod+Shift+7 move container to workspace 7
    $mod+Shift+8 move container to workspace 8
    $mod+Shift+9 move container to workspace 9
    $mod+Shift+0 move container to workspace 10

    $mod+Control+Shift+1 move container to workspace 11
    $mod+Control+Shift+2 move container to workspace 12
    $mod+Control+Shift+3 move container to workspace 13
    $mod+Control+Shift+4 move container to workspace 14
    $mod+Control+Shift+5 move container to workspace 15
    $mod+Control+Shift+6 move container to workspace 16
    $mod+Control+Shift+7 move container to workspace 17
    $mod+Control+Shift+8 move container to workspace 18
    $mod+Control+Shift+9 move container to workspace 19
    $mod+Control+Shift+0 move container to workspace 20
}

# Reload the config file.
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "swaynag -t warning -m 'Exit sway?' -b 'Yes' 'swaymsg exit'"
bindsym $mod+Shift+Backspace exec lock
# Toggle control center
bindsym $mod+Shift+n exec swaync-client -t -sw

bindsym $mod+o exec dolphin

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

input * {
    xkb_layout us,ee
    xkb_options caps:escape,grp:win_space_toggle
}

input type:keyboard {
    repeat_delay 200
    repeat_rate 30
}

focus_follows_mouse no

#set $wallpapers_path $HOME/wallpapers
# TODO: only if $wallpapers_path exists and at least one file, otherwise we get config syntax error.
#output * bg `find $wallpapers_path -type f | shuf -n 1` fill

for_window [class=".*"] border none

for_window [class="REAPER"] border normal, floating enable
for_window [class="yabridge-host.exe.so"] border normal, floating enable

# The middle button over a titlebar kills the window.
bindsym --release button2 kill

seat seat0 hide_cursor 3000

# AUTOSTART
exec bash $HOME/.scripts/sway-startup.sh
