[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	p = pull
	pul = pull
	ns = diff --name-status
	cx = cherry-pick -x
	lg = "!git log --graph --decorate --pretty=format:'%C(yellow)%h %Cred%cr %Cblue(%an)%C(cyan)%d%Creset %s' --abbrev-commit --all"
	lb = "!git log --graph --decorate --pretty=format:'%C(yellow)%h %Cred%cr %Cblue(%an)%C(cyan)%d%Creset %s' --abbrev-commit --first-parent $(git branch --show-current)"

	# Git logs.
	logs = !git-fzf log
	reflogs = !git-fzf reflog

	# Github CLI.

	# PRs in current repo.
	prs = !gh-fzf prs

	# Issues in current repo.
	issues = !gh-fzf issues

	# Search code in all repos.
	code = !gh-fzf code

[mergetool]
	keepBackup = false
[diff]
	algorithm = histogram
	; colorMoved = plain
	mnemonicPrefix = true
	renames = true
[mergetool "nvim"]
	cmd = NVIM_DIFF=1 nvim -d -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[merge]
	tool = nvim
[commit]
	gpgSign = true
	verbose = true
[include]
	path = ~/.gitconfig_local
[pull]
	ff = only
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[tag]
	sort = version:refname
[branch]
	sort = -committerdate
[init]
	defaultBranch = main
[push]
	default = simple # (default since 2.0)
	autoSetupRemote = true
	followTags = true
[fetch]
	prune = true
	pruneTags = true
	all = true
