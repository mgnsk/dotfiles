# Maintainer: mgnsk < mgnsk at kokk dot eu >

pkgname=gh-tpl-bin
pkgver=0.0.8
pkgrel=1
provides=("${pkgname/-bin/}")
conflicts=('gh-tpl' 'gh-tpl-git')
pkgdesc="Github CLI templating tool for JSON."
arch=('x86_64')
url="https://github.com/mgnsk/gh-tpl"
license=('MIT')

source_x86_64=("$pkgname-$pkgver.tar.gz::https://github.com/mgnsk/gh-tpl/releases/download/v${pkgver}/gh-tpl-v${pkgver}-linux-amd64.tar.gz")
sha256sums_x86_64=('54d667915007a093d6e3927b4b3bdaadc5e48716cf0b990b774bb2d7a6fb7b3e')

package() {
	install -Dm755 gh-tpl -t "$pkgdir/usr/bin/"
	install -Dm644 LICENSE -t "$pkgdir/usr/share/licenses/$pkgname/"
}
