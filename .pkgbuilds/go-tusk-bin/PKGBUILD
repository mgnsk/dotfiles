# Maintainer: mgnsk

pkgname=go-tusk-bin
pkgver=0.7.3
pkgrel=1
provides=("${pkgname/-bin/}")
conflicts=('go-tusk' 'go-tusk-git')
pkgdesc="The modern task runner"
arch=('x86_64' 'aarch64')
url="https://github.com/rliebz/tusk"
license=('MIT')

source_aarch64=("$pkgname-$pkgver.tar.gz::$url/releases/download/v${pkgver}/tusk_${pkgver}_linux_arm64.tar.gz")
source_x86_64=("$pkgname-$pkgver.tar.gz::$url/releases/download/v${pkgver}/tusk_${pkgver}_linux_amd64.tar.gz")

sha256sums_aarch64=('8a2444a6748865307eb281ce730a183e1e11cb3655965c6a05d949731ceb6670')
sha256sums_x86_64=('1eb47f2815fd9b59e8def42cf1f1a1c8f369cb7e4124190710e6645876f85b7d')

package() {
	install -Dm755 tusk "$pkgdir/usr/bin/tusk"
	install -Dm644 LICENSE -t "$pkgdir/usr/share/licenses/${pkgname/-bin/}"
	install -Dm644 README.md -t "$pkgdir/usr/share/doc/${pkgname/-bin/}"
}
