# Maintainer: mgnsk < mgnsk at kokk dot eu >

pkgname=tusk-bin
pkgver=0.7.3
pkgrel=1
provides=("${pkgname/-bin/}")
conflicts=('tusk' 'tusk-git')
pkgdesc="The modern task runner"
arch=('x86_64')
url="https://github.com/rliebz/tusk"
license=('MIT')

source_x86_64=("$pkgname-$pkgver.tar.gz::https://github.com/rliebz/tusk/releases/download/v${pkgver}/tusk_${pkgver}_linux_amd64.tar.gz")
sha256sums_x86_64=('1eb47f2815fd9b59e8def42cf1f1a1c8f369cb7e4124190710e6645876f85b7d')

package() {
	install -Dm755 tusk -t "$pkgdir/usr/bin/"
	install -Dm644 LICENSE -t "$pkgdir/usr/share/licenses/$pkgname/"
}
