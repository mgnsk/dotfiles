{
	"languageserver": {
		"golang": {
			"command": "gopls",
			"args": [
				"-remote=auto"
			],
			"rootPatterns": [
				"go.mod",
				".vim/",
				".git/",
				".hg/"
			],
			"filetypes": [
				"go"
			]
		}
	},
	"go.goplsOptions": {
		"completeUnimported": true
	},
	"coc.preferences": {
		"jumpCommand": "tab drop",
		"extensionUpdateCheck": "never",
		"mesageLevel": "error",
		"formatOnSaveFiletypes": ["javascript", "typescript", "json", "css", "markdown"]
	},
	"clangd": {
		"path": "/usr/bin/clangd",
		"semanticHighlighting": true
	},
	"yaml": {
		"format": {
			"enable": true
		}
	},
}
